<EditorPopup@Popup>:
    auto_dismiss: False
    title: 'Confirgurador de Camisetas'
    size_hint: (1, 1)
    resizable: 1

    BoxLayout:
        canvas.before:
            Color:
                rgb: (1,1,1)
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: "vertical"
        adaptive_size: True
        padding: 0
        MDTopAppBar:
            canvas.before:
                Color:
                    rgb: hex('#2a3ac9')
                Rectangle:
                    pos: self.pos
                    size: self.size
            title: "Editor"
            elevation: 2
            type_height: "small"
            canvas:
                Color:
                    rgba: 50, 123, 143, 1
                Line:
                    width: dp(5)
                    points: [self.x, self.width]
        # Fields to add: Tamaño, Diseño, Color/es,
        # Texto (Contenido, Posición, Tamaño, Rotación, Color, Tipografía), 
        # Logo/Dibujo (Logo, Subir Logo, Posición, Rotación, Tamaño)
        GridLayout:
            cols: 2
            Image:
                source: 'Assets/Imagenes/PlaceholderShirt.png'
                size: self.texture_size
                fit_mode: "contain"
                size_hint_x: 0.35
            BoxLayout:
                canvas.before:
                    Color:
                        rgba: 50, 123, 143, 1
                    Line:
                        width: dp(1.5)
                        points: [self.width, self.height]
